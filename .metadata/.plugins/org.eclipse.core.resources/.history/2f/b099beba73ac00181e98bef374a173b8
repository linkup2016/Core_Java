import java.util.Scanner;

public class Test {

	public static void main(String[] args) {
		String language;
		
		
		Scanner input = new Scanner(System.in);
				
		System.out.println("Please Select your language ");
		System.out.println("");
		System.out.println("");
		language = input.nextLine();
		
		switch(language) {
		case "Amharic": System.out.println("Enkuwan Dehna Metu !"); break;
		case "English": System.out.println("Welcome! "); break;
		case "Oromifa": System.out.println("Began negan dufteni");break;
		default: System.out.println("Sorry, We do support your language at this time");
		}
		
		
		

	}

}
